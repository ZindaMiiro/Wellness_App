<!-- activity_user_therapy.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_pen">

    <TextView
        android:id="@+id/TherapyWork_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TherapyS"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />



    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/TherapyWork_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="32dp">


            <Button
                android:id="@+id/button_makeappointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appointment"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:minHeight="50dp"
                android:maxWidth="200dp"
                android:paddingVertical="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/button_veiwappointments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkappointments"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:minHeight="50dp"
                android:maxWidth="200dp"
                android:paddingVertical="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/LinearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="32dp">


            <Button
                android:id="@+id/button_viewTherapists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/veiwTherapist"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:minHeight="50dp"
                android:maxWidth="200dp"
                android:paddingVertical="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/button_reveiws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:maxWidth="200dp"
                android:minHeight="50dp"
                android:paddingVertical="12dp"
                android:text="@string/Review"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/LinearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/button_chooseD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorAccent"
                android:maxWidth="200dp"
                android:minHeight="50dp"
                android:paddingVertical="12dp"
                android:text="@string/ChooseUSER"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
