<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_pen"
    android:padding="16dp">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="309dp"
        android:layout_height="271dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/landingimage" />

    <Button
        android:id="@+id/buttonChooseTherapist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_choose_therapist_text"
        android:layout_below="@id/logo"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="100dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/buttonCheckTherapistDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_check_therapist_department_text"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@color/white"
        android:layout_below="@id/buttonChooseTherapist"
        android:layout_centerHorizontal="true"
        tools:ignore="VisualLintButtonSize" />

</RelativeLayout>
